<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/brailToolLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_background">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ToggleButton
                android:id="@+id/LeftTopBrail"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text=""></ToggleButton>

            <ToggleButton
                android:id="@+id/RightTopBrail"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text=""></ToggleButton>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ToggleButton
                android:id="@+id/LeftMiddleBrail"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text=""></ToggleButton>

            <ToggleButton
                android:id="@+id/RightMiddleBrail"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text=""></ToggleButton>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ToggleButton
                android:id="@+id/LeftBottomBrail"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text=""></ToggleButton>

            <ToggleButton
                android:id="@+id/RightBottomBrail"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:text=""></ToggleButton>
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="39dp"
        android:layout_toRightOf="@+id/tableLayout1"
        android:text="@string/reset" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tableLayout1"
        android:layout_alignLeft="@+id/resetButton"
        android:layout_marginBottom="52dp"
        android:text="@string/next" />

    <EditText
        android:id="@+id/outputText"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tableLayout1"
        android:layout_marginTop="24dp"
        android:editable="false"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/fullText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/outputText"
        android:layout_marginTop="20dp"
        android:textSize="30sp" />

</RelativeLayout>